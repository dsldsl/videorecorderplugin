<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    id="com.appgyver.plugin.Echo"
    version="1.0.0">

    <name>VideoRecorder</name>

  <description>
    Video recorder Plugin for Steroids.js
  </description>

  <asset src="www/EchoPlugin.js" target="plugins/EchoPlugin.js" />

  <engines>
    <engine name="cordova" version=">=2.7.0" />
  </engines>


  <!-- ios -->
  <platform name="ios">
    <config-file target="config.xml" parent="/*/plugins">
      <plugin name="Echo" value="Echo" onload="true" />
    </config-file>

    <config-file target="config.xml" parent="/widget">
      <feature name="VideoRecorder">
        <param name="ios-package" value="VideoRecorder"/>
        <param name="onload" value="true" />
      </feature>
    </config-file>

    <header-file src="src/ios/VideoRecorder.h" />

    <source-file src="src/ios/VideoRecorder.m" />

  </platform>
</plugin>